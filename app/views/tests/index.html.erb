<body class="hold-transition skin-blue sidebar-mini margin-top-left-admin">
	<div class="wrapper">
		<%= render "administration/left" %>
		<div class="content-wrapper">
			<section class="content container-fluid">
				<div class="container-form">
					<%= link_to 'Thêm đề thi', new_user_test_path(current_user), id: "new-category", class: "btn btn-primary" %>
					<h3 style="text-align: center;">Đề thi</h3>
					
					<%= form_tag user_tests_path(current_user), method: :get, class: "form-inline" do %>
			            <div class="form-group">
			                <%= select_tag :is_delete, options_for_select([["Chưa bị xóa", "0"],["Đã bị xóa", "1"]], params[:is_delete]), :class => 'form-control' %>
			            </div>

			           	<div class="form-group">
			              <%= submit_tag "Lọc", class: "btn btn-success" %> 
			          	</div>

			        	<div class="form-group">
			        		<label>Số lượng: <%= @tests.size %>/<%= Test.all.size %></label>
			        	</div>
			        <% end %>
					<br>
					<table class="table">
						<thead>
							<tr>
								<th>Tên</th>
								<th>Mô tả</th>
								<th>Điểm tuyệt đối</th>
								<th>Thời gian (phút)</th>
								<th>Lượt thi</th>
								<th colspan="2">Action</th>
							</tr>
						</thead>

						<tbody id="tests">
							<%= render @tests %>
						</tbody>
					</table>
				</div>
			</section>
		</div>
	</div>
</body>
<script type="text/javascript">
  $('#container_application').removeClass('container');
</script>