  <div class="cover-form-login send-mail">
    <div class="right">
      <br>
      <div class="text-center">
        <h3>Đổi Mật Khẩu</h3>
      </div>  
      <div class="card-body">
       <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>
        <%= f.hidden_field :reset_password_token %>
  
        <div class="form-group">
          <label for="exampleInputPassword1">Mật khẩu: (tối thiểu 8 ký tự và gồm ít nhất 1 chữ hoa, 1 chữ thường, 1 số)</label>
          <%= f.password_field :password, autocomplete: "off", placeholder: "Mật khẩu", class: "form-control" %>
        </div>

        <div class="form-group">
          <label for="exampleInputPassword1">Xác nhận mật khẩu:</label>
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Xác nhận mật khẩu", class: "form-control" %>
        </div>

        <div class="text-center">
          <div class="form-group">
            <%= f.submit "Đổi mật khẩu", class: "btn btn-primary" %>
          </div>
        </div>
        <% end %>
      </div>
      <div class="text-center">
        <%= link_to "Đăng nhập", new_session_path(resource_name) %>
      </div>
    </div>
    
  </div>

