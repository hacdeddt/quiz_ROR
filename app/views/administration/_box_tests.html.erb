<div class="col-md-6">
  <!-- PRODUCT LIST -->
  <div class="box box-primary">
    <div class="box-header with-border">
      <h3 class="box-title">Đề thi được thêm trong tuần qua (<%= @tests.size %>)</h3>

      <div class="box-tools pull-right">
        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
        </button>

      </div>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
      <ul class="products-list product-list-in-box">
        <% @tests.limit(10).each do |test| %>
        <li class="item">
          <%= link_to user_test_details_path(test.user.id, test.id) do %>
            
              <span style="font-size: 16px; font-weight: 600;"><%= test.name %></span> 
              <span style="margin-left: 35px;">bởi <%= test.user.fullName %>
              <span class="label label-warning pull-right"><%= test.results_count %></span>
              <span class="product-description">
                <%= raw truncate(test.description, :length => 100) %>
              </span>
            
          <% end %>
        </li>
        <%end %>
        <!-- /.item -->

      </ul>
    </div>
    <!-- /.box-body -->
    <div class="box-footer text-center">
      <%= link_to user_tests_path(current_user) do %>View All Products <% end %>
    </div>
    <!-- /.box-footer -->
  </div>
</div>