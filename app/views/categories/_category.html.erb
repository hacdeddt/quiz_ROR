<tr id="category_<%= category.id %>">
	<td><%= category.name %></td>
	<td><%= link_to edit_category_path(category), remote: true, id: "link_edit_"+category.id.to_s do %>
			<i class="fa fa-pencil" aria-hidden="true"></i>
		<% end %>
	</td>
	<td><%= link_to category, method: :delete, data: { confirm: 'Are you sure?' }, remote: true do %>
			<i class="fa fa-trash" aria-hidden="true"></i>
		<%end %>
	</td>
</tr>
<tr class="edit_category_<%= category.id %>" style="display: none;">
	<td colspan="3" id="edit_category_<%= category.id %>"></td>
</tr>